{
  "name": "audio-suite-pro",
  "version": "1.0.0",
  "description": "A powerful, web-based audio transcription and text processing suite powered by OpenAI",
  "main": "src/index.html",
  "scripts": {
    "dev": "npm run serve",
    "serve": "npx http-server -p 8000 -o",
    "build": "echo 'Build process to be implemented'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "lint:css": "stylelint src/css/**/*.css",
    "lint:css:fix": "stylelint src/css/**/*.css --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "validate": "npm run lint && npm run lint:css && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "audio",
    "transcription",
    "speech-to-text",
    "ai",
    "openai",
    "whisper",
    "web-app",
    "javascript",
    "text-processing",
    "translation"
  ],
  "author": "Audio Suite Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisDCG/Lokal_neu.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisDCG/Lokal_neu/issues"
  },
  "homepage": "https://github.com/ChrisDCG/Lokal_neu#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ]
  },
  "lint-staged": {
    "src/js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/css/**/*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "src/**/*.html": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}