{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": "off",
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "no-debugger": ["error"],
    "prefer-const": "off",
    "no-var": "off",
    "eqeqeq": "off",
    "curly": "off",
    "brace-style": "off",
    "comma-dangle": "off",
    "max-len": "off"
  },
  "globals": {
    "translations": "readonly",
    "apiKeyManager": "readonly",
    "audioManager": "readonly",
    "transcriptionManager": "readonly",
    "vocabularyManager": "readonly"
  }
}